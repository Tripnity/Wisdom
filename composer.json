{
    "type": "library",
    "name": "kherge/wisdom",
    "description": "A Symfony Config-based configuration loader.",
    "homepage": "http://github.com/kherge/Wisdom",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Herrera",
            "email": "me@kevingh.com"
        }
    ],

    "require": {
        "php": ">=5.3.3",
        "symfony/config": "~2.1"
    },

    "require-dev": {
        "silex/silex": "@dev",
        "symfony/yaml": "~2.1"
    },

    "suggest": {
        "ext-json": "For parsing JSON files.",
        "symfony/yaml": "For parsing YAML files."
    },

    "autoload": {
        "psr-0": {
            "KevinGH\\Wisdom": "src/lib/"
        }
    },

    "config": {
        "vendor-dir": "src/vendors"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
